@model IEnumerable<Storyboard_App.Models.Project>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div>
    <button class="btn btn-primary new-project">Edit</button>
</div>

<ul>
    @foreach (var project in Model)
    {
        <li>
            @Html.ActionLink(project.Name, "DisplayProject", "Projects", new { project = project.Name }, null)
        </li>
    }
</ul>

<div class="modal fade in" id="edit-project">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="new-project-container"></div>
        </div>
    </div>
</div>