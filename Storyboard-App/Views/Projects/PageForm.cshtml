@model Storyboard_App.ViewModels.PageViewModel
@{
    ViewBag.Title = "PageForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Page</h2>

@using (Html.BeginForm("SavePage", "Projects"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(m => m.Page.RoughSketch)
        @Html.TextBoxFor(m => m.Page.RoughSketch, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Page.RoughSketch)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Page.NotesSketch)
        @Html.TextBoxFor(m => m.Page.NotesSketch, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Page.NotesSketch)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Page.FinalSketch)
        @Html.TextBoxFor(m => m.Page.FinalSketch, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Page.FinalSketch)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Page.Description)
        @Html.TextAreaFor(m => m.Page.Description, new { @class = "multi-line-textbox" })
        @Html.ValidationMessageFor(m => m.Page.Description)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Page.Script)
        @Html.TextAreaFor(m => m.Page.Script, new { @class = "multi-line-textbox" })
        @Html.ValidationMessageFor(m => m.Page.Script)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Page.Num)
        @Html.TextBoxFor(m => m.Page.Num, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Page.Num)
    </div>
    @Html.HiddenFor(m => m.Page.Id)
    
    @Html.HiddenFor(m => m.Project.Id)
    @Html.HiddenFor(m => m.Project.Name)
    @Html.HiddenFor(m => m.Project.Pages)
    @Html.HiddenFor(m => m.Project.Description)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}